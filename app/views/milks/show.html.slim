h1 ミルクの詳細内容

= render_breadcrumbs separator: '>'

nav.justify-content-end 
  = link_to 'ミルク一覧', milks_path, class:'btn btn-primary'

table.table.table-hover 
  tbody 
    tr 
      th = Milk.human_attribute_name(:id)
      td = @milk.id
    tr 
      th = Milk.human_attribute_name(:kind)
      td = @milk.human_attribute_enum(:kind)
    tr 
      th = Milk.human_attribute_name(:amount)
      td = @milk.amount
    tr 
      th = Milk.human_attribute_name(:time)
      td = l @milk.time
    tr 
      th = Milk.human_attribute_name(:memo)
      td = auto_link(simple_format(h(@milk.memo), {}, sanitize: false, wrapper_tag: "div"))
    tr 
      th = Milk.human_attribute_name(:created_at)
      td = l @milk.created_at
    tr 
      th = Milk.human_attribute_name(:updated_at)
      td = l @milk.updated_at

= link_to '編集', edit_milk_path, class: 'btn btn-primary mr-3'
= link_to '削除', milk_path, data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' }, class: 'btn btn-danger'
